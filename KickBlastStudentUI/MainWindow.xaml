<Window x:Class="KickBlastStudentUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="KickBlast Student UI"
        Height="780"
        Width="1280"
        MinHeight="700"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F8FAFC">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="#111827">
            <StackPanel Margin="0,20,0,20">
                <TextBlock Text="KickBlast" Foreground="White" FontSize="24" FontWeight="Bold" Margin="18,0,0,26" />
                <Button x:Name="DashboardButton" Content="Dashboard" Style="{StaticResource SidebarButtonStyle}" Click="DashboardButton_Click" />
                <Button x:Name="AthletesButton" Content="Athletes" Style="{StaticResource SidebarButtonStyle}" Click="AthletesButton_Click" />
                <Button x:Name="CalculatorButton" Content="Calculator" Style="{StaticResource SidebarButtonStyle}" Click="CalculatorButton_Click" />
                <Button x:Name="HistoryButton" Content="History" Style="{StaticResource SidebarButtonStyle}" Click="HistoryButton_Click" />
                <Button x:Name="SettingsButton" Content="Settings" Style="{StaticResource SidebarButtonStyle}" Click="SettingsButton_Click" />
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <RowDefinition Height="34" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,0,1">
                <Grid Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding CurrentPageTitle}" VerticalAlignment="Center" FontSize="18" FontWeight="SemiBold" Foreground="#0F172A" />
                    <TextBlock Grid.Column="1" Text="{Binding CurrentDateText}" VerticalAlignment="Center" Margin="0,0,20,0" Foreground="#475569" FontSize="13" />
                    <Button Grid.Column="2" Content="Logout" Width="90" Height="34" Style="{StaticResource HeaderButtonStyle}" Click="LogoutButton_Click" />
                </Grid>
            </Border>

            <ContentControl Grid.Row="1" Margin="20" Content="{Binding CurrentView}" />

            <Border Grid.Row="2" Background="#E2E8F0">
                <TextBlock Text="{Binding ToastMessage}" VerticalAlignment="Center" Margin="16,0" Foreground="#0F172A" FontSize="12" />
            </Border>
        </Grid>
    </Grid>
</Window>
