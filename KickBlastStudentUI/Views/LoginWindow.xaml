<Window x:Class="KickBlastStudentUI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KickBlast Login"
        Height="430"
        Width="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8FAFC">
    <Grid>
        <Border Style="{StaticResource CardStyle}" Width="360" Padding="28" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Welcome Back" FontSize="24" FontWeight="Bold" Foreground="#0F172A" />
                <TextBlock Text="Login to continue" Margin="0,4,0,18" Foreground="#64748B" />

                <TextBlock Text="Username" Foreground="#334155" Margin="0,0,0,6" />
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputBoxStyle}" />

                <TextBlock Text="Password" Foreground="#334155" Margin="0,8,0,6" />
                <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" Height="36" Padding="8" BorderBrush="#CBD5E1" BorderThickness="1" />

                <TextBlock Text="{Binding ErrorMessage}" Foreground="#DC2626" Margin="0,10,0,2" />

                <Button Content="Login" Height="42" Margin="0,12,0,0" Style="{StaticResource AccentButtonStyle}" Command="{Binding LoginCommand}" />
                <TextBlock Text="Default: rashii / 123456" Foreground="#94A3B8" Margin="0,12,0,0" HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
