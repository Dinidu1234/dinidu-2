<UserControl x:Class="KickBlastStudentUI.Views.CalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Style="{StaticResource CardStyle}" Margin="0,0,10,0">
            <StackPanel>
                <TextBlock Text="Calculation Inputs" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" />
                <TextBlock Text="Athlete" />
                <ComboBox ItemsSource="{Binding Athletes}" SelectedItem="{Binding SelectedAthlete}" DisplayMemberPath="Name" Height="36" />

                <TextBlock Text="Month" Margin="0,8,0,0" />
                <TextBox Text="{Binding Month}" Style="{StaticResource InputBoxStyle}" />

                <TextBlock Text="Year" Margin="0,8,0,0" />
                <TextBox Text="{Binding Year}" Style="{StaticResource InputBoxStyle}" />

                <TextBlock Text="Competitions Count" Margin="0,8,0,0" />
                <TextBox Text="{Binding CompetitionsCount}" Style="{StaticResource InputBoxStyle}" />

                <TextBlock Text="Coaching Hours / Week (0..5)" Margin="0,8,0,0" />
                <TextBox Text="{Binding CoachingHoursPerWeek}" Style="{StaticResource InputBoxStyle}" />

                <TextBlock Text="{Binding ValidationMessage}" Foreground="#DC2626" Margin="0,8,0,0" TextWrapping="Wrap" />

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="Calculate" Command="{Binding CalculateCommand}" Style="{StaticResource AccentButtonStyle}" Width="110" Height="38" Margin="0,0,8,0" />
                    <Button Content="Save" Command="{Binding SaveCommand}" Style="{StaticResource HeaderButtonStyle}" Width="90" Height="38" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Invoice Preview" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" />
                <TextBlock Text="Training Cost" Foreground="#64748B" />
                <TextBlock Text="{Binding TrainingCostText}" FontSize="20" FontWeight="SemiBold" />
                <TextBlock Text="Coaching Cost" Foreground="#64748B" Margin="0,8,0,0" />
                <TextBlock Text="{Binding CoachingCostText}" FontSize="20" FontWeight="SemiBold" />
                <TextBlock Text="Competition Cost" Foreground="#64748B" Margin="0,8,0,0" />
                <TextBlock Text="{Binding CompetitionCostText}" FontSize="20" FontWeight="SemiBold" />

                <Separator Margin="0,10" />

                <TextBlock Text="Total" Foreground="#0E7490" />
                <TextBlock Text="{Binding TotalCostText}" FontSize="30" FontWeight="Bold" Foreground="#0F172A" />
                <TextBlock Text="{Binding WeightStatus}" Margin="0,10,0,0" FontWeight="SemiBold" />
                <TextBlock Text="{Binding SecondSaturdayText, StringFormat=Second Saturday: {0}}" Margin="0,4,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
