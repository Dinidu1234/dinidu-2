<UserControl x:Class="KickBlastStudentUI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <UniformGrid Columns="4" Margin="0,0,0,12">
                <Border Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Total Athletes" Foreground="#64748B" />
                        <TextBlock Text="{Binding TotalAthletes}" FontSize="26" FontWeight="Bold" Foreground="#0F172A" />
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Calculations This Month" Foreground="#64748B" />
                        <TextBlock Text="{Binding CalculationsThisMonth}" FontSize="26" FontWeight="Bold" Foreground="#0F172A" />
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Revenue This Month" Foreground="#64748B" />
                        <TextBlock Text="{Binding TotalRevenueThisMonth}" FontSize="22" FontWeight="Bold" Foreground="#0F172A" />
                    </StackPanel>
                </Border>
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="Next Competition Date" Foreground="#64748B" />
                        <TextBlock Text="{Binding NextCompetitionDate}" FontSize="22" FontWeight="Bold" Foreground="#0F172A" />
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Recent Calculations" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8" />
                    <DataGrid ItemsSource="{Binding RecentCalculations}" AutoGenerateColumns="True" IsReadOnly="True" Height="350" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
