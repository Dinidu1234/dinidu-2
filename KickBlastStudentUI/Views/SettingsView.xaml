<UserControl x:Class="KickBlastStudentUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardStyle}" MaxWidth="520">
        <StackPanel>
            <TextBlock Text="Pricing Settings" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12" />

            <TextBlock Text="Beginner Weekly Fee" />
            <TextBox Text="{Binding BeginnerWeeklyFee}" Style="{StaticResource InputBoxStyle}" />

            <TextBlock Text="Intermediate Weekly Fee" Margin="0,8,0,0" />
            <TextBox Text="{Binding IntermediateWeeklyFee}" Style="{StaticResource InputBoxStyle}" />

            <TextBlock Text="Elite Weekly Fee" Margin="0,8,0,0" />
            <TextBox Text="{Binding EliteWeeklyFee}" Style="{StaticResource InputBoxStyle}" />

            <TextBlock Text="Competition Fee" Margin="0,8,0,0" />
            <TextBox Text="{Binding CompetitionFee}" Style="{StaticResource InputBoxStyle}" />

            <TextBlock Text="Coaching Hourly Rate" Margin="0,8,0,0" />
            <TextBox Text="{Binding CoachingHourlyRate}" Style="{StaticResource InputBoxStyle}" />

            <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                <Button Content="Save Pricing" Command="{Binding SaveCommand}" Style="{StaticResource AccentButtonStyle}" Width="120" Height="38" Margin="0,0,8,0" />
                <Button Content="Reload" Command="{Binding ReloadCommand}" Style="{StaticResource HeaderButtonStyle}" Width="90" Height="38" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
